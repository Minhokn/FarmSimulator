<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="bpane" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controlleurs.CommandeController">
    <center>
        <VBox BorderPane.alignment="CENTER">
            <TableView fx:id="tableView" maxHeight="315" minHeight="315.0">
                <columns>
                    <TableColumn fx:id="column_date" minWidth="136.0" prefWidth="136.0" text="Date" />
                    <TableColumn fx:id="column_adr" minWidth="250.0" prefWidth="260.0" text="Adresse du champ" />
                    <TableColumn fx:id="column_client" minWidth="250.0" prefWidth="273.0" text="Client" />
                    <TableColumn fx:id="column_surf" minWidth="119.0" prefWidth="175.0" text="Surface du champ" />
                    <TableColumn fx:id="column_transport" minWidth="220.0" prefWidth="258.0" text="Transport de la commande" />
                    <TableColumn fx:id="column_type_bott" minWidth="211.0" prefWidth="211.0" text="Type de botteulage" />
                    <TableColumn fx:id="column_taillemax" minWidth="250.0" prefWidth="427.0" text="Taille maximum transport de la commande" />
                </columns>
            </TableView>

             <HBox alignment="CENTER" maxHeight="70" minHeight="70" spacing="10">
                <JFXButton onAction="#addCommande" prefHeight="40" styleClass="btn, btn-success" text="Ajouter une commande">
                    <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="PLUS" size="16.0" wrappingWidth="18" />
                    </graphic>
                </JFXButton>
                <JFXButton fx:id="edit_btn" onAction="#editCommande" prefHeight="40" styleClass="btn, btn-primary" text="Modifier une commande" visible="false">
                    <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="EDIT" size="16.0" wrappingWidth="18" />
                    </graphic>
                </JFXButton>
                <JFXButton fx:id="delete_btn" onAction="#deleteCommande" prefHeight="40" styleClass="btn, btn-danger" text="Supprimer une commande" visible="false">
                    <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="TRASH_ALT" size="16.0" wrappingWidth="18" />
                    </graphic>
                </JFXButton>
            </HBox>
        </VBox>
    </center>
</BorderPane>
