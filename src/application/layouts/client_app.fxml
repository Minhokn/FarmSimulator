<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<BorderPane fx:id="bpane" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controlleurs.ClientController">
    <center>
        <VBox BorderPane.alignment="CENTER">
            <SplitPane dividerPositions="0.25" VBox.vgrow="SOMETIMES">
                <BorderPane minWidth="575" maxWidth="575">
                    <top>
                        <TableView fx:id="tableView" minHeight="315.0" maxHeight="315">
                            <columns>
                                <TableColumn fx:id="column_nom" minWidth="250.0" text="Nom" />
                                <TableColumn fx:id="column_prenom" minWidth="250.0" text="Prenom" />
                            </columns>
                        </TableView>
                    </top>
                    <center>
                        <VBox>
                            <padding><Insets left="15" right="15" bottom="15"/></padding>
                            <Label text="Informations" styleClass="pane_title" prefHeight="75.0" />
                            <ListView fx:id="listInfos" />
                        </VBox>
                    </center>

                    <bottom>
                        <HBox alignment="CENTER" spacing="10" minHeight="70" maxHeight="70">
                            <JFXButton text="Ajouter un client" onAction="#addClient" styleClass="btn, btn-success" prefHeight="40">
                                <graphic>
                                    <FontAwesomeIconView fill="WHITE" glyphName="PLUS" size="16.0" wrappingWidth="18" />
                                </graphic>
                            </JFXButton>
                            <JFXButton fx:id="edit_btn" text="Modifier le client" visible="false" onAction="#editClient" styleClass="btn, btn-primary" prefHeight="40">
                                <graphic>
                                    <FontAwesomeIconView fill="WHITE" glyphName="EDIT" size="16.0" wrappingWidth="18" />
                                </graphic>
                            </JFXButton>
                            <JFXButton fx:id="delete_btn" text="Supprimer le client" visible="false" onAction="#deleteClient" styleClass="btn, btn-danger" prefHeight="40">
                                <graphic>
                                    <FontAwesomeIconView fill="WHITE" glyphName="TRASH_ALT" size="16.0" wrappingWidth="18" />
                                </graphic>
                            </JFXButton>
                        </HBox>
                    </bottom>
                </BorderPane>
                <StackPane fx:id="googleMaps" />
            </SplitPane>
        </VBox>
    </center>
</BorderPane>