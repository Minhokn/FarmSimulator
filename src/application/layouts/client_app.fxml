<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="bpane" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controlleurs.ClientController">
    <center>
        <VBox BorderPane.alignment="CENTER">
            <TableView fx:id="tableView" minHeight="200.0" prefWidth="200.0">
                <columns>
                    <TableColumn fx:id="column_id" minWidth="50.0" text="ID"/>
                    <TableColumn fx:id="column_nom" minWidth="115.0" text="Nom" />
                    <TableColumn fx:id="column_prenom" minWidth="115.0" text="Prenom" />
                    <TableColumn fx:id="column_num_tel" minWidth="175.0" text="Numéro de téléphone" />
                    <TableColumn fx:id="column_adresse" minWidth="275.0" text="Adresse" />
                    <TableColumn fx:id="column_email" minWidth="250.0" text="Email" />
                </columns>
            </TableView>
            <SplitPane dividerPositions="0.25" VBox.vgrow="SOMETIMES">
                    <VBox minWidth="450.0" maxWidth="450">
                        <ListView fx:id="listInfos" />
                        <HBox alignment="CENTER" spacing="10">
                            <JFXButton text="Ajouter un client" onAction="#addClient" buttonType="RAISED" styleClass="btn, btn-success" prefHeight="40" />
                            <JFXButton text="Modifier le client" onAction="#editClient" buttonType="RAISED" styleClass="btn, btn-primary" prefHeight="40" />
                            <JFXButton text="Supprimer le client" onAction="#deleteClient" buttonType="RAISED" styleClass="btn, btn-danger" prefHeight="40" />

                            <padding>
                                <Insets top="20.0" />
                            </padding>
                        </HBox>
                    </VBox>
                    <StackPane fx:id="googleMaps" />
            </SplitPane>
        </VBox>
    </center>
</BorderPane>
