<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<BorderPane fx:id="bpane" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controlleurs.ClientController">
    <center>
        <VBox BorderPane.alignment="CENTER">
            <TableView fx:id="tableView" minHeight="200.0" prefWidth="200.0">
                <columns>
                    <TableColumn fx:id="column_id" minWidth="50.0" text="ID"/>
                    <TableColumn fx:id="column_nom" minWidth="115.0" text="Nom" />
                    <TableColumn fx:id="column_prenom" minWidth="115.0" text="Prenom" />
                    <TableColumn fx:id="column_num_tel" minWidth="175.0" text="Numéro de téléphone" />
                    <TableColumn fx:id="column_adresse" minWidth="275.0" text="Adresse" />
                    <TableColumn fx:id="column_email" minWidth="250.0" text="Email" />
                </columns>
            </TableView>
            <SplitPane dividerPositions="0.25" VBox.vgrow="SOMETIMES">
                <BorderPane minWidth="500" maxWidth="500">
                    <padding><Insets left="15" right="15" bottom="15"/></padding>

                    <top>
                        <Label text="Informations" styleClass="pane_title" prefHeight="75.0" />
                    </top>
                    <center>
                        <ListView fx:id="listInfos" />
                    </center>
                    <bottom>
                        <HBox alignment="CENTER" spacing="10" minHeight="70" maxHeight="70">
                            <JFXButton fx:id="btnAdd" text="Ajouter un client" onAction="#addClient" styleClass="btn, btn-success" prefHeight="40">
                                <graphic>
                                    <FontAwesomeIconView fill="WHITE" glyphName="PLUS" size="16.0" wrappingWidth="18" />
                                </graphic>
                            </JFXButton>
                            <JFXButton fx:id="btnEdit" text="Modifier le client" onAction="#editClient" styleClass="btn, btn-primary" prefHeight="40">
                                <graphic>
                                    <FontAwesomeIconView fill="WHITE" glyphName="EDIT" size="16.0" wrappingWidth="18" />
                                </graphic>
                            </JFXButton>
                            <JFXButton fx:id="btnDelete" text="Supprimer le client" onAction="#deleteClient" styleClass="btn, btn-danger" prefHeight="40">
                                <graphic>
                                    <FontAwesomeIconView fill="WHITE" glyphName="TRASH_ALT" size="16.0" wrappingWidth="18" />
                                </graphic>
                            </JFXButton>
                        </HBox>
                    </bottom>
                </BorderPane>
                <StackPane fx:id="googleMaps" />
            </SplitPane>
        </VBox>
    </center>
</BorderPane>