<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.StackPane?>

<?import javafx.scene.control.cell.PropertyValueFactory?>

<?import javafx.scene.layout.HBox?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<BorderPane fx:id="bpane" xmlns="http://javafx.com/javafx/8.0.66" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controlleurs.ChampController">
    <center>
        <VBox BorderPane.alignment="CENTER">
            <TableView fx:id="tableView" minHeight="200.0" prefWidth="200.0">
                <columns>
                    <TableColumn fx:id="column_id" minWidth="50.0" text="ID" />
                    <TableColumn fx:id="column_surface" minWidth="100.0" text="Surface mÂ²" />
                    <TableColumn fx:id="column_type_culture" minWidth="115.0" text="Type de culture" />
                    <TableColumn fx:id="column_proprietaire" minWidth="200.0" text="Proprietaire" />
                    <TableColumn fx:id="column_bottelage" minWidth="100.0" text="Bottelage" />
                    <TableColumn fx:id="column_transport" minWidth="130.0" text="Transport" />
                </columns>
            </TableView>
            <SplitPane dividerPositions="0.25" VBox.vgrow="SOMETIMES">
                <BorderPane minWidth="525" maxWidth="525">
                    <padding><Insets left="15" right="15" bottom="15"/></padding>

                    <top>
                        <Label text="Informations" styleClass="pane_title" prefHeight="75.0" />
                    </top>
                    <center>
                        <ListView fx:id="listInfos" />
                    </center>
                    <bottom>
                        <HBox alignment="CENTER" spacing="10" minHeight="70" maxHeight="70">
                            <JFXButton fx:id="btnAdd" text="Ajouter un champ" onAction="#addChamp" styleClass="btn, btn-success" prefHeight="40">
                                <graphic>
                                    <FontAwesomeIconView fill="WHITE" glyphName="PLUS" size="16.0" wrappingWidth="18" />
                                </graphic>
                            </JFXButton>
                            <JFXButton fx:id="btnEdit" text="Modifier le champ" onAction="#editChamp" styleClass="btn, btn-primary" prefHeight="40">
                                <graphic>
                                    <FontAwesomeIconView fill="WHITE" glyphName="EDIT" size="16.0" wrappingWidth="18" />
                                </graphic>
                            </JFXButton>
                            <JFXButton fx:id="btnDelete" text="Supprimer le champ" onAction="#deleteChamp" styleClass="btn, btn-danger" prefHeight="40">
                                <graphic>
                                    <FontAwesomeIconView fill="WHITE" glyphName="TRASH_ALT" size="16.0" wrappingWidth="18" />
                                </graphic>
                            </JFXButton>
                        </HBox>
                    </bottom>
                </BorderPane>
                <StackPane fx:id="googleMaps"/>
            </SplitPane>
        </VBox>
    </center>
</BorderPane>