<BorderPane fx:id="bpane" xmlns="http://javafx.com/javafx/8.0.66" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controlleurs.ChampController">
    <center>
        <VBox BorderPane.alignment="CENTER">
            <TableView fx:id="tableView" minHeight="200.0" prefWidth="200.0">
                <columns>
                    <TableColumn fx:id="column_id" minWidth="50.0" text="ID" />
                    <TableColumn fx:id="column_surface" minWidth="100.0" text="Surface mÂ²" />
                    <TableColumn fx:id="column_type_culture" minWidth="115.0" text="Type de culture" />
                    <TableColumn fx:id="column_proprietaire" minWidth="200.0" text="Proprietaire" />
                    <TableColumn fx:id="column_bottelage" minWidth="100.0" text="Bottelage" />
                    <TableColumn fx:id="column_transport" minWidth="130.0" text="Transport" />
                </columns>
            </TableView>
            <SplitPane dividerPositions="0.25" VBox.vgrow="SOMETIMES">
                <VBox minWidth="500.0" maxWidth="500">
                    <ListView fx:id="listInfos" />
                    <HBox alignment="CENTER" spacing="10">
                        <JFXButton text="Ajouter un champ" onAction="#addChamp" buttonType="RAISED" styleClass="btn, btn-success" prefHeight="40" />
                        <JFXButton text="Modifier le champ" onAction="#editChamp" buttonType="RAISED" styleClass="btn, btn-primary" prefHeight="40" />
                        <JFXButton text="Supprimer le champ" onAction="#deleteChamp" buttonType="RAISED" styleClass="btn, btn-danger" prefHeight="40" />

                        <padding>
                            <Insets top="20.0" />
                        </padding>
                    </HBox>
                </VBox>
                <StackPane fx:id="googleMaps"/>
            </SplitPane>
        </VBox>
    </center>
</BorderPane>