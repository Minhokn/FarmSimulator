<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<?import javafx.scene.control.Label?>

<BorderPane fx:id="bpane" xmlns="http://javafx.com/javafx/8.0.66" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controlleurs.AffectationController">
    <center>
        <VBox spacing="10" BorderPane.alignment="CENTER_LEFT">
            <padding><Insets top="5" left="15" right="15" bottom="5"/></padding>

            <Label text="Affectations" styleClass="pane_title" />
            <Label fx:id="titleCommandeSelected" styleClass="pane_title" />

            <TableView fx:id="tableView" minHeight="290.0" maxHeight="290.0">
                <columns>
                    <TableColumn fx:id="column_type" minWidth="180.0" text="Type vÃ©hicule" />
                    <TableColumn fx:id="column_vehicule" minWidth="280.0" text="Vehicule" />
                </columns>
            </TableView>
            <HBox BorderPane.alignment="BOTTOM_LEFT" alignment="CENTER_LEFT" spacing="10" minHeight="70" maxHeight="70">
                <padding><Insets left="15" bottom="15"/></padding>
                <JFXButton text="Nouvelle affectation" onAction="#addAffect" styleClass="btn, btn-success" prefHeight="40">
                    <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="PLUS" size="16.0" wrappingWidth="18" />
                    </graphic>
                </JFXButton>
                <JFXButton fx:id="delete_btn" text="Supprimer l'affectation" visible="false" onAction="#deleteAffect" styleClass="btn, btn-danger" prefHeight="40">
                    <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="TRASH_ALT" size="16.0" wrappingWidth="18" />
                    </graphic>
                </JFXButton>
            </HBox>
        </VBox>
    </center>
</BorderPane>